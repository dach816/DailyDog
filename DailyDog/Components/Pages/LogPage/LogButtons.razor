@using Domain;
@using Services;
@using DailyDog.Components.Pages.LogPage.Model;

<div class="row log-text my-2">
    <div class="d-flex flex-row flex-wrap align-items-center">
        <NewLogButton />
        @foreach (var activity in Model.Activities?.Where(a => a.QuickAdd).Take(5) ?? new List<Activity>())
        {
            <QuickAddLogButton Activity="activity" Dogs="Model.Dogs" AddLog="AddLog" />
        }
    </div>
</div>

@code {
    [CascadingParameter]
    public LogViewModel Model { get; set; }

    [Parameter]
    public Func<(Activity Activity, List<Dog> Dogs), Task> AddLog { get; set; }
}